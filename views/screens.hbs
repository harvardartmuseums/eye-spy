<script>
    let socket = io('/screens');
    let timer;

    const idleTimeout = 300000; // 5 minutes

    document.addEventListener('DOMContentLoaded', (event) => {
        // ready to go

        playAttractScreen();
    })

    function playAttractScreen() {
        clearTimeout(timer);

        document.getElementById("attract").setAttribute("class", "visible");

        // Additional attract screen behavior goes here 
        // e.g. hiding views of interactive content
        // document.getElementById("detail-view").setAttribute("class", "invisible");
    }

    function resetTimer() {
        clearTimeout(timer);
        timer = setTimeout(playAttractScreen, idleTimeout);
    }    
</script>